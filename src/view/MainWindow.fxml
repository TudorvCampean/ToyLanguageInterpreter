<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindowController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Number of PrgStates:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="numberOfPrgStatesTextField" editable="false" text="0" />
    </HBox>

    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Heap Table" textFill="#2b00ff"><font><Font name="System Bold" size="12.0"/></font></Label>
            <TableView fx:id="heapTableView" prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="heapAddressColumn" text="Address" />
                    <TableColumn fx:id="heapValueColumn" text="Value" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Output List" textFill="#2b00ff"><font><Font name="System Bold" size="12.0"/></font></Label>
            <ListView fx:id="outputListView" prefHeight="200.0" prefWidth="200.0" />
        </VBox>

        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="File Table" textFill="#2b00ff"><font><Font name="System Bold" size="12.0"/></font></Label>
            <ListView fx:id="fileTableListView" prefHeight="200.0" prefWidth="200.0" />
        </VBox>
    </HBox>

    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="PrgState Identifiers" textFill="#2b00ff"><font><Font name="System Bold" size="12.0"/></font></Label>
            <ListView fx:id="prgStateListIdListView" onMouseClicked="#handleChangePrgState" prefHeight="200.0" prefWidth="200.0" />
        </VBox>

        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Symbol Table" textFill="#2b00ff"><font><Font name="System Bold" size="12.0"/></font></Label>
            <TableView fx:id="symbolTableView" prefHeight="200.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="symTableVarNameColumn" text="Variable Name" />
                    <TableColumn fx:id="symTableValueColumn" text="Value" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <Label text="Execution Stack" textFill="#2b00ff"><font><Font name="System Bold" size="12.0"/></font></Label>
            <ListView fx:id="exeStackListView" prefHeight="200.0" prefWidth="200.0" />
        </VBox>
    </HBox>

    <Button fx:id="runOneStepButton" mnemonicParsing="false" onAction="#handleRunOneStep" text="Run One Step" textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Button>

</VBox>